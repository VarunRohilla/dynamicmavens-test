<header class="site-header">
  <div class="header-main">
    
    <nav class="site-nav">
      <ul class="menu">
        {% for link in linklists[section.settings.main_menu].links %}
          <li class="menu-item {% if link.links != blank %}has-mega{% endif %}">
            <a href="{{ link.url }}">{{ link.title }}</a>

            {% if link.links != blank %}
              <div class="mega-menu">
                <div class="mega-inner">
                  <div class="mega-columns">
                    {% assign sub_menu = link.links %}
                    {% for sublink in sub_menu %}
                      <div class="mega-col">
                        <h4>{{ sublink.title }}</h4>
                        <ul>
                          {% for child in sublink.links %}
                            <li><a href="{{ child.url }}">{{ child.title }}</a></li>
                          {% endfor %}
                        </ul>
                      </div>
                    {% endfor %}
                  </div>

                  {% for block in section.blocks %}
                  {% if block.settings.menu_handle == link.title %}
                    <div class="mega-image">
                      <a href="{{ block.settings.link }}">
                        <img src="{{ block.settings.image | image_url: width: 500 }}" alt="">
                        <div class="mega-text">{{ block.settings.text }}</div>
                      </a>
                    </div>
                  {% endif %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>

    <div class="logo">
      <a href="{{ routes.root_url }}">
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
      </a>
    </div>

    <div class="header-icons">
      <a href="/search" class="icon header__icon header__icon--search">{{- 'icon-search.svg' | inline_asset_content -}}</a>
      <a href="/account" class="icon header__icon header__icon--account">{{ 'icon-account.svg' | inline_asset_content }}</a>
      <a href="/cart" class="icon header__icon header__icon--cart">{{ 'icon-cart-empty.svg' | inline_asset_content }}</a>
    </div>
  </div>
</header>

<style>
  .site-header {
    font-family: sans-serif;
  }
  .header-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 30px;
    background: #fff;
    position: relative;
  }
  .logo img {
    max-height: 40px;
  }
  .site-nav .menu {
    list-style: none;
    display: flex;
    gap: 25px;
    margin: 0;
    padding: 0;
  }
  {% comment %} .site-nav .menu-item {
    position: relative;
  } {% endcomment %}
  .site-nav .menu-item a {
    text-decoration: none;
    color: #111;
    font-weight: 600;
  }
  .site-nav .menu-item.has-mega:hover .mega-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  .mega-menu {
    position: absolute;
    left: 0;
    top: 100%;
    width: 100%;
    background: #fff;
    padding: 30px;
    display: flex;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.3s ease;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    z-index: 10;
  }
  .mega-inner {
    display: flex;
    width: 100%;
    max-width: 1200px;
    gap: 40px;
  }
  .mega-columns {
    display: flex;
    gap: 50px;
    flex: 2;
  }
  .mega-col h4 {
    font-size: 14px;
    margin-bottom: 10px;
    font-weight: bold;
  }
  .mega-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .mega-col ul li {
    margin-bottom: 6px;
  }
  .mega-col ul li a {
    font-size: 13px;
    text-decoration: none;
    color: #444;
  }
  .mega-image {
    flex: 1;
    position: relative;
  }
  .mega-image img {
    width: 100%;
    border-radius: 6px;
  }
  .mega-text {
    position: absolute;
    bottom: 15px;
    left: 15px;
    color: #fff;
    font-weight: bold;
    background: rgba(0,0,0,0.4);
    padding: 5px 10px;
    border-radius: 4px;
  }
  .header-icons {
    display: flex;
    gap: 15px;
    font-size: 18px;
  }
  .header-icons .cart-count {
    font-size: 12px;
    background: #000;
    color: #fff;
    padding: 2px 6px;
    border-radius: 50%;
    margin-left: 5px;
  }
</style>

{% schema %}
{
  "name": "Header with Mega Menu",
  "settings": [
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "blocks": [
    {
      "type": "mega_image",
      "name": "Mega Menu Image",
      "settings": [
        {
          "type": "text",
          "id": "menu_handle",
          "label": "Attach to Menu Item Title (case sensitive)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Overlay Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Header with Mega Menu"
    }
  ]
}
{% endschema %}
